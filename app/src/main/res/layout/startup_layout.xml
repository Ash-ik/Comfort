<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/startupLayout">

    <!--ROW-->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/bg1"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:elevation="20dp"
            android:layout_margin="5dp"
            android:id="@+id/home_blind_menu"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_blind_image"
                android:src="@drawable/blind_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:gravity="center" />

            <TextView
                android:text="Visually Impaired people"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_below="@+id/home_blind_image"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/home_blind_textView"
                android:textColor="@android:color/white"/>

        </RelativeLayout>


        <RelativeLayout
            android:background="@drawable/bg2"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:elevation="20dp"
            android:id="@+id/home_dumb_menu"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_dumb_image"
                android:src="@drawable/dumb_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:gravity="center" />

            <TextView
                android:text="Voice Impaired people"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_below="@+id/home_dumb_image"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/home_dumb_textView"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/bg3"
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:elevation="20dp"
            android:layout_margin="5dp"
            android:id="@+id/home_deaf_menu"
            android:gravity="center">

            <ImageView
                android:id="@+id/home_deaf_image"
                android:src="@drawable/deaf_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:gravity="center" />

            <TextView
                android:text="Hearing Impaired people"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_below="@+id/home_deaf_image"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/home_deaf_textView"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>